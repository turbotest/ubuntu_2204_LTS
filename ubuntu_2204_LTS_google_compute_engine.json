{
	"builders": [
    {
      "type": "googlecompute",
      "credentials_file": "{{ user `credentials_file` }}",
      "project_id": "{{ user `project_id` }}",
      "source_image_family": "ubuntu-2204-lts",
      "image_family": "ubuntu-2204-lts",
      "image_name": "ubuntu-2204-lts-{{ timestamp }}",
      "disk_size": "20",
      "disk_type": "pd-ssd",
      "ssh_username": "ubuntu",
      "zone": "europe-west2-c",
      "machine_type": "c2-standard-16"
    }
	],
	"provisioners": [
    { "type": "shell", "script": "base_dependencies.sh" },
		{ "type": "shell", "script": "user_account.sh" },
    { "type": "shell", "script": "elasticsearch.sh" },
    { "type": "shell", "script": "headless_browsers.sh" },
    { "type": "shell", "script": "javascript_node.sh" },
    { "type": "shell", "script": "mariadb.sh" },
    { "type": "shell", "script": "memcached.sh" },
    { "type": "shell", "script": "mysql.sh" },
    { "type": "shell", "script": "postgresql.sh" },
    { "type": "shell", "script": "rabbitmq.sh" },
    { "type": "shell", "script": "redis.sh" },
    { "type": "shell", "script": "ruby.sh" }
	]
}